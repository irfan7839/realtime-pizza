<section class="login flex justify-center pt-24">
        <div class="w-full max-w-xs ">
              <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <div class="mb-4">
                  
                    <label for="username" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                    <input id="username" name="email" type="email" autocomplete="email" required class="appearance-none rounded  w-full px-3 py-2  text-gray-700 leading-tight  mb-4" placeholder="Email address">
                </div>
                  <div>
                    <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                    <input id="password" name="password" type="password" autocomplete="current-password" required class=" appearance-none rounded  w-full px-3 py-2  text-gray-700 leading-tight  mb-4" placeholder="Password">
                  
                </div>
          
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 mb-2 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                    <label for="remember-me" class="ml-2 block text-sm text-gray-900 mb-2 ">
                      Remember me
                    </label>
                  </div> 
                </div>
          
                <div class="flex items-center justify-between">
                  <button type="submit" class=" btn-primary text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3 mt-4">
                      <!-- Heroicon name: solid/lock-closed -->
                     
                    </span>
                    Log In
                  </button>               
                    <a href="/register" class="inline-block align-baseline font-bold text-sm">
                      Don't have account?
                    </a>
                </div>
              </form>
              <p class="text-center text-gray-500 text-xs">
                  &copy;2021 Irfan's Corp. All rights reserved.
              </p>
            </div>
</section>